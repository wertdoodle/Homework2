package HW2;

public class LowerorUpper {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
			char ch = 'E';
			if(ch>='A' && ch<='Z') {
				System.out.println("Uppercase");
			}
			else {
				System.out.println("Lowercase");
			}
	}

}
