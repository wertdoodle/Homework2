package HW2;

//Problem #1
public class OddorEven {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int number = ('5');
		
		if(number % 2 == 0) {
			System.out.println("The number is even.");
		}
	
		else {
			System.out.println("The number is odd.");
		}

	}

}

